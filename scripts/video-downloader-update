#!/usr/bin/env bash
# Script de mantenimiento para el descargador de videos
# Actualiza yt-dlp y verifica la seguridad del sistema

set -euo pipefail

# ConfiguraciÃ³n
CONFIG_DIR="$HOME/.config/video-downloader"

# Cargar configuraciÃ³n
# Se espera que DOWNLOAD_DIR estÃ© definido en config.conf
source "$CONFIG_DIR/config.conf" 2>/dev/null || true

# Colores
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

echo -e "${BLUE}ðŸ”§ Mantenimiento del Descargador de Videos${NC}"
echo -e "${BLUE}=========================================${NC}"
echo ""

# Actualizar yt-dlp
echo -e "${YELLOW}ðŸ“¦ Actualizando yt-dlp...${NC}"
if command -v yt-dlp &> /dev/null; then
    yt-dlp --update
    echo -e "${GREEN}âœ… yt-dlp actualizado ${NC}"
else
    echo -e "${RED}âŒ yt-dlp no estÃ¡ instalado ${NC}"
    echo -e "${YELLOW}ðŸ’¡ Ejecuta: sudo pacman -S yt-dlp${NC}"
fi

echo ""

# Verificar FFmpeg
echo -e "${YELLOW}ðŸŽ¬ Verificando FFmpeg...${NC}"
if command -v ffmpeg &> /dev/null; then
    echo -e "${GREEN}âœ… FFmpeg disponible  ${NC}"
else
    echo -e "${RED}âŒ FFmpeg no estÃ¡ instalado ${NC}"
    echo -e "${YELLOW}ðŸ’¡ Ejecuta: sudo pacman -S ffmpeg${NC}"
fi

echo ""

# Verificar espacio en disco
echo -e "${YELLOW}ðŸ’¾ Verificando espacio disponible...${NC}"
# AsegÃºrate de que DOWNLOAD_DIR estÃ© definido en config.conf
DISK_USAGE=$(df -P "$DOWNLOAD_DIR" 2>/dev/null | awk 'NR==2 {print $5}' | sed 's/%//' || echo "0")
if [ "$DISK_USAGE" -gt 80 ]; then
    echo -e "${RED}âš ï¸  Advertencia: Disco casi lleno (${DISK_USAGE}% usado)${NC}"
    echo -e "${YELLOW}ðŸ’¡ Considera limpiar archivos antiguos${NC}"
else
    echo -e "${GREEN}âœ… Espacio suficiente (${DISK_USAGE}% usado)${NC}"
fi

echo ""

# Limpiar archivos temporales
echo -e "${YELLOW}ðŸ§¹ Limpiando archivos temporales...${NC}"
find "$DOWNLOAD_DIR" -name "*.temp" -type f -delete 2>/dev/null || true
find "$DOWNLOAD_DIR" -name "*.ytdl" -type f -delete 2>/dev/null || true
find "$DOWNLOAD_DIR" -name "*.part" -type f -mtime +1 -delete 2>/dev/null || true
echo -e "${GREEN}âœ… Limpieza completada ${NC}"

echo ""

# Mostrar estadÃ­sticas
echo -e "${BLUE}ðŸ“Š EstadÃ­sticas de descarga:${NC}"
echo -e "${YELLOW}TikTok:${NC} $(find "$DOWNLOAD_DIR/TikTok" -name "*.mp4" 2>/dev/null | wc -l) videos"
echo -e "${YELLOW}YouTube:${NC} $(find "$DOWNLOAD_DIR/YouTube" \( -name "*.mp4" -o -name "*.webm" \) 2>/dev/null | wc -l) videos"
echo -e "${YELLOW}Instagram:${NC} $(find "$DOWNLOAD_DIR/Instagram" -name "*.mp4" 2>/dev/null | wc -l) videos"
echo -e "${YELLOW}Otros:${NC} $(find "$DOWNLOAD_DIR/Otros" -type f 2>/dev/null | wc -l) archivos"

echo ""
echo -e "${GREEN}âœ… Mantenimiento completado ${NC}"