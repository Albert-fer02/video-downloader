#!/bin/bash
# Script de mantenimiento para el descargador de videos
# Actualiza yt-dlp y verifica la seguridad del sistema

set -euo pipefail

# Colores
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

echo -e "${BLUE}🔧 Mantenimiento del Descargador de Videos${NC}"
echo -e "${BLUE}=========================================${NC}"
echo ""

# Actualizar yt-dlp
echo -e "${YELLOW}📦 Actualizando yt-dlp...${NC}"
if command -v yt-dlp &> /dev/null; then
    yt-dlp --update
    echo -e "${GREEN}✅ yt-dlp actualizado${NC}"
else
    echo -e "${RED}❌ yt-dlp no está instalado${NC}"
    echo -e "${YELLOW}💡 Ejecuta: sudo pacman -S yt-dlp${NC}"
fi

echo ""

# Verificar FFmpeg
echo -e "${YELLOW}🎬 Verificando FFmpeg...${NC}"
if command -v ffmpeg &> /dev/null; then
    echo -e "${GREEN}✅ FFmpeg disponible ${NC}"
else
    echo -e "${RED}❌ FFmpeg no está instalado${NC}"
    echo -e "${YELLOW}💡 Ejecuta: sudo pacman -S ffmpeg${NC}"
fi

echo ""

# Verificar espacio en disco
echo -e "${YELLOW}💾 Verificando espacio disponible...${NC}"
DISK_USAGE=$(df -P /home/dreamcoder08/Descargas/Videos 2>/dev/null | awk 'NR==2 {print $5}' | sed 's/%//' || echo "0")
if [ "$DISK_USAGE" -gt 80 ]; then
    echo -e "${RED}⚠️  Advertencia: Disco casi lleno (${DISK_USAGE}% usado)${NC}"
    echo -e "${YELLOW}💡 Considera limpiar archivos antiguos${NC}"
else
    echo -e "${GREEN}✅ Espacio suficiente (${DISK_USAGE}% usado)${NC}"
fi

echo ""

# Limpiar archivos temporales
echo -e "${YELLOW}🧹 Limpiando archivos temporales...${NC}"
find ~/Descargas/Videos -name "*.temp" -type f -delete 2>/dev/null || true
find ~/Descargas/Videos -name "*.ytdl" -type f -delete 2>/dev/null || true
find ~/Descargas/Videos -name "*.part" -type f -mtime +1 -delete 2>/dev/null || true
echo -e "${GREEN}✅ Limpieza completada${NC}"

echo ""

# Mostrar estadísticas
echo -e "${BLUE}📊 Estadísticas de descarga:${NC}"
echo -e "${YELLOW}TikTok:${NC} $(find ~/Descargas/Videos/TikTok -name "*.mp4" 2>/dev/null | wc -l) videos"
echo -e "${YELLOW}YouTube:${NC} $(find ~/Descargas/Videos/YouTube -name "*.mp4" -o -name "*.webm" 2>/dev/null | wc -l) videos"
echo -e "${YELLOW}Instagram:${NC} $(find ~/Descargas/Videos/Instagram -name "*.mp4" 2>/dev/null | wc -l) videos"
echo -e "${YELLOW}Otros:${NC} $(find ~/Descargas/Videos/Otros -type f 2>/dev/null | wc -l) archivos"

echo ""
echo -e "${GREEN}✅ Mantenimiento completado${NC}"

